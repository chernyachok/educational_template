<h2>{{class.title}}`s lessons</h2>
  <table cellspacing="0" cellpadding="0">
    <thead>
      <tr>
        <th>Lesson Number</th>
        <th>Lesson title</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each class.lessons}}
        <tr>
          <td>{{this.lesson_number}}</td>
          <td>{{this.lesson_title}}</td>
          <td><a href="/classes/{{../class._id}}/lessons/{{lesson_number}}">View lessons</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
