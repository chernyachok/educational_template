<h2>{{instructor.first_name}}`s classes</h2>
{{#if messages.success}}
  {{messages.success}}
{{/if}}
{{#if instructor.classes}}
  <table cellspacing="0" cellpadding="0">
    <thead>
      <tr>
        <th>Class id</th>
        <th>Class name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each instructor.classes}}
        <tr>
          <td>{{this.class_id}}</td>
          <td>{{this.class_title}}</td>
          <td><a href="/classes/{{this.class_id}}/lessons">View lessons</td>
            <td><a href="/instructors/classes/{{this.class_id}}/lessons/new">Add lesson</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <h5>You arent registered for any classes</h5>
{{/if}}
