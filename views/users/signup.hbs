{{#if messages.error}}
  <ul>
    <li>{{messages.error}}</li>
  </ul>
{{else}}
    <h2>Create an account</h2>
{{/if}}
{{#if errors}}
  {{#each errors}}
    <ul>
      <li class="alert-danger">{{this.msg}}</li>
    </ul>
  {{/each}}
{{/if}}
<form class="" id="regForm" action="/users/signup" method="post" enctype="application/x-www-form-urlencoded">
  <div class="">
    <label for="">Account type</label>
    <select  name="type">
      <option value="student">Student</option>
      <option value="instructor">Instructor</option>
    </select>

  </div>
  <div class="">
    <label for="">First name </label>
    <input type="text" name="first_name" value="{{first_name}}">
  </div>
  <div class="">
    <label for="">Last name </label>
    <input type="text" name="last_name" value="{{last_name}}">
  </div>
  <div class="">
    <label for="">Street address </label>
    <input type="text" name="street_address" value="{{street_address}}">
  </div>
  <div class="">
    <label for="">City </label>
    <input type="text" name="city" value="{{city}}">
  </div>
  <div class="">
    <label for="">Zip</label>
    <input type="text" name="zip" value="{{zip}}">
  </div>
  <div class="">
    <label for="">Email </label>
    <input type="email" name="email" value="{{email}}">
  </div>
  <div class="">
    <label for="">Username</label>
    <input type="text" name="username" value="{{username}}">
  </div>
  <div class="">
    <label for="">Password</label>
    <input type="text" name="password" value="{{password}}">
  </div>
  <div class="">
    <label for="">Password Confirmation</label>
    <input type="text" name="password_2" value="{{password_2}}">
  </div>

  <div class="">
    <input type="submit" value="SignUp">
  </div>









</form>
